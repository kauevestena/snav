<launch>
  <group ns="camera1">
    <node pkg="libuvc_camera" type="camera_node" name="mycam1">
      <!-- Parameters used to find the camera -->
      <param name="vendor" value="0x046d"/>
      <param name="product" value="0x0825"/>
    <!-- <param name="serial" value="40A18DE0"/> -->
       
      <!-- If the above parameters aren't unique, choose the first match: -->

      <!-- Image size and type -->
      <param name="width" value="320"/>
      <param name="height" value="240"/>
      <!-- choose whichever uncompressed format the camera supports: -->
      <param name="video_mode" value=" yuyv"/> <!-- or yuyv/nv12/mjpeg -->

      <param name="frame_rate" value="30"/>

      <param name="timestamp_method" value="start"/> <!-- start of frame -->
      <!-- <param name="camera_info_url" value="file:///home/ubuntu/catkin_ws/cam.yml"/> -->

      <param name="auto_exposure" value="1"/> <!-- use aperture_priority auto exposure -->
      <param name="exposure_absolute" value="10"/>
      <param name="auto_white_balance" value="true"/>
    </node>
  </group>
</launch>